{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":timezone(Asia/Tokyo)"
  ],
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "after 10pm and before 5am every weekend"
  ],
  "dependencyDashboard": true,
  "automerge": true,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "devDependencies"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "dependencies (non-major)"
    }
  ]
}